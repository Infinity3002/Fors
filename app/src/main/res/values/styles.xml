<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#22bf83</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PinCodeIndicator">
        <item name="android:layout_width">@dimen/_4sdp</item>
        <item name="android:layout_height">@dimen/_4sdp</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:background">@drawable/selector_pin_indicator</item>
    </style>

    <style name="Button">
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:layout_marginLeft">@dimen/_24sdp</item>
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
        <item name="android:layout_marginRight">@dimen/_24sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/button_white</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Red">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.StrokeWhite">
        <item name="android:background">@drawable/button_outlined_grey</item>
    </style>

</resources>

