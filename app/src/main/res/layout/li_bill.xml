<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/_59sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:drag_edge="right|left">


    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/_ea4442"
        android:padding="@dimen/_12sdp"
        android:drawableStart="@drawable/ic_arrow_top_right"
        android:drawablePadding="@dimen/_4sdp"
        android:stateListAnimator="@null"
        android:text="@string/bill.send"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"/>

    <Button
        android:id="@+id/btnRefill"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/_1ABC9C"
        android:padding="@dimen/_12sdp"
        android:drawableStart="@drawable/ic_arrow_bottom_left"
        android:drawablePadding="@dimen/_4sdp"
        android:stateListAnimator="@null"
        android:text="@string/bill.refill"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"/>



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clCenter"
        android:padding="@dimen/_12sdp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Зарплатный счет"/>

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/_9b9b9b"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            tools:text="2246"/>

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="119 556 Р"/>

    </android.support.constraint.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>