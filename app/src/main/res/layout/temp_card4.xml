<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/card4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ivBackground"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,9:5"
        app:srcCompat="@mipmap/temp_card4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Visa Gold Cashback"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        app:layout_constraintStart_toStartOf="@id/ivBackground"
        app:layout_constraintTop_toTopOf="@id/ivBackground" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="7000 &#8381;"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5676 4567 8907 9706"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toTopOf="@id/tvDate"
        app:layout_constraintLeft_toLeftOf="@id/tvDate"  />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        android:text="03/21"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="@id/ivBackground"
        app:layout_constraintStart_toStartOf="@id/ivBackground" />

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@mipmap/ic_visa"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>